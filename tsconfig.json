{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "composite": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/*": ["./src/*"],
      "@platform/core/*": ["../../packages/core/src/*"],
      "@domain/*": ["../../packages/core/src/domain/*"],
      "@core/*": ["../../packages/core/src/domain/*"],
      "@platform/adapters/*": ["../../packages/adapters/src/*"],
      "@platform/database/*": ["../../packages/database/src/*"],
      "@platform/shared/*": ["../../packages/shared/src/*"],
      "@platform/shared-context/*": ["../../packages/shared-context/src/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src"],
  "references": [
    { "path": "../../packages/core" },
    { "path": "../../packages/adapters" },
    { "path": "../../packages/database" },
    { "path": "../../packages/shared" },
    { "path": "../../packages/shared-context" }
  ]
}
