{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "composite": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@platform/core/*": ["../core/src/*"],
      "@platform/database/*": ["../database/src/*"],
      "@platform/adapters/*": ["../adapters/src/*"],
      "@platform/shared/*": ["../shared/src/*"],
      "@/*": ["./src/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src"],
  "references": [
    { "path": "../core" },
    { "path": "../database" },
    { "path": "../adapters" },
    { "path": "../shared" }
  ]
}
