rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Deny all other accesses by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Match any document under the projects collection
    match /projects/{projectId} {
      allow read: if resource.data.userId == request.auth.token.email;
      allow write: if false;

      // Match any subcollection under the project document
      match /{document=**} {
        allow read: if get(/databases/$(database)/documents/projects/$(projectId)).data.userId == request.auth.token.email;
        allow write: if false;
      }
    }
  }
}
